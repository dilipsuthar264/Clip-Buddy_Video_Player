<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp">

    <ImageView
        android:id="@+id/imgFolder"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:contentDescription="@null"
        android:src="@drawable/folder_thumb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toStartOf="@id/txtFolderName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtFolderName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/folder_name"
        android:textColor="@color/colorPrimaryText"
        android:textSize="14sp"
        app:layout_constraintVertical_chainStyle="packed"
        android:fontFamily="@font/be_vietnam_pro__medium"
        app:layout_constraintBottom_toTopOf="@id/txtVideoCount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgFolder"
        app:layout_constraintTop_toTopOf="@id/imgFolder" />

    <TextView
        android:id="@+id/txtVideoCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_4_video"
        android:textColor="@color/colorSecondaryText"
        android:textSize="12sp"
        android:includeFontPadding="false"
        android:fontFamily="@font/be_vietnam_pro__regular"
        android:paddingVertical="2dp"
        app:layout_constraintBottom_toBottomOf="@id/imgFolder"
        app:layout_constraintEnd_toEndOf="@id/txtFolderName"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/txtFolderName"
        app:layout_constraintTop_toBottomOf="@id/txtFolderName" />

</androidx.constraintlayout.widget.ConstraintLayout>